<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragment.ProfileFragment"
    android:background="#F44336">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile"
        android:id="@+id/imgProfile"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/imgProfile"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of User"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/CardName"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/CardMob"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/txtMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="91183249423"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/CardMob"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/CardEmail"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketangoyal1042@gmail.com"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/CardEmail"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/CardLoc"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rajasthan"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>